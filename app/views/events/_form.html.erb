<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :venue_id %><br />
	<%= f.select :venue_id, Venue.all.collect {|s| [s.name, s.id]} %>
  </div>
  <div class="field">
    <%= f.label :start %><br />
    <%= f.datetime_select :start %>
  </div>
  <div class="field">
    <%= f.label :end %><br />
    <%= f.datetime_select :end %>
  </div>
  <div class="field">
    <%= f.label :info_url %><br />
    <%= f.text_field :info_url %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
		<% for musician in Musician.all %>
  		<%= check_box_tag "event[musician_ids][]", musician.id, (@event.musicians.include? musician) %> <%= musician.name %>
		<% end %>
	</div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
